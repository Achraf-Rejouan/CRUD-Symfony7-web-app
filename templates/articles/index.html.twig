{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-4 text-center text-uppercase font-weight-bold">Liste des Articles</h2>

    {% if articles %}
        <div class="table-responsive rounded-lg overflow-hidden shadow-sm">
            <table id="articles" class="table table-dark table-striped mb-0">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Catégorie</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.nom }}</td>
                            <td>{{ article.prix }}</td>
                            <td>{{ article.categorie.titre }}</td>
                            <td>
                                <div class="d-flex flex-wrap">
                                    <a href="/article/{{ article.id }}" class="btn btn-outline-light btn-sm mr-2 mb-2">Détails</a>
                                    <a href="/article/edit/{{ article.id }}" class="btn btn-outline-warning btn-sm mr-2 mb-2">Modifier</a>
                                    <a href="/article/delete/{{ article.id }}" class="btn btn-outline-danger btn-sm mb-2" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">Supprimer</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info text-center">Aucun article trouvé.</div>
    {% endif %}
</div>
{% endblock %}
